@using Morning.Value.Web.Site.Home.Models
@model ReaderHomeViewModel
@{
    ViewData["Title"] = "Inicio";
    Layout = "_Layout";
}

<div class="container py-4">
    @if (TempData["ok"] is string okMsg)
    {
        <div class="alert alert-success">@okMsg</div>
    }
    @if (TempData["err"] is string errMsg)
    {
        <div class="alert alert-warning">@errMsg</div>
    }

    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Libros disponibles</h2>
        <span class="text-muted">Total: <strong>@Model.Books.Count</strong></span>
    </div>

    <div class="row g-3">
        @foreach (var b in Model.Books)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@b.Title</h5>
                            <span class="badge @(b.Available > 0 ? "bg-success" : "bg-secondary")">
                                @(b.Available > 0 ? $"{b.Available} disp." : "Agotado")
                            </span>
                        </div>
                        <p class="card-text text-muted small mb-1"><strong>Autor:</strong> @b.Author</p>
                        <p class="card-text text-muted small mb-3"><strong>Género:</strong> @b.Genre</p>

                        <div class="mt-auto">
                            <form action="/loans/borrow" method="post" class="d-grid">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookId" value="@b.Id" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" class="btn btn-primary" @(b.Available <= 0 ? "disabled" : null)>
                                    Pedir prestado
                                </button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
